{% set menu_id='blog' %}
{% block head %}
{{parent()}}
<link rel="stylesheet" type="text/css" href="/css/blog/style.min.css?{{siteinfo.version}}">
<script src="/js/blog/script.min.js?{{siteinfo.version}}"></script>
{% endblock %}
{% block content %}
<div class="inner">
    <div class="head">
        <ol class="breadcrumb">
            <li>
                <a href="/"><img src="/img/common/home.png" class="icon"></img></a>
            </li>
            <li>
                <a href="/blog">ブログ</a>
            </li>
        </ol>
        <h1 class="title" data-en="Blog">ブログ</h1>
    </div>
    <div class="body">
        <div class="search_box">
            <div class="title">分類</div>
            <ol class="tags">
                <li class="tag active"><a href="">全て</a></li>
                <li class="tag"><a href="">読書</a></li>
                <li class="tag"><a href="">人生</a></li>
            </ol>
        </div>
        <div class="search_box">
            <div class="title">年</div>
            <ol class="tags">
                <li class="tag active"><a href="">全て</a></li>
                <li class="tag"><a href="">2020</a></li>
                <li class="tag"><a href="">2021</a></li>
                <li class="tag"><a href="">2022</a></li>
            </ol>
        </div>
        <div class="cards">
            <div class="container-fluid">
                <div class="row">
                    {% for blog_item in blog_list %}
                    <div class="col-12">
                        <div class="card">
                            <a href="/{{ blog_item.kind }}/{{ blog_item.slug }}" class="link">
                                <img src="/{{ blog_item.kind }}/{{ blog_item.slug }}" class="thumbnail">
                            </a>
                            <div class="right">
                                <div class="title">{{ blog_item.title }}</div>
                                <div class="meta">
                                    <a href=""><div class="tag">{{ blog_item.tag_name }}</div></a>
                                    <div class="date">{{ blog_item.updated_date|date('Y/m/d') }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
